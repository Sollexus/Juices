<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="home" id="appBase" href="@Url.Content("~/")" />
    <title>@ViewBag.Title - Сочная корзина</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

	<meta name="description" content="Сочная корзина" />
</head>
	<body>
		<div class="navbar navbar-inverse navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					@Html.ActionLink("Сочная корзина", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
				</div>
				<div class="navbar-collapse collapse">
					<ul class="nav navbar-nav">
						<li>@Html.ActionLink("Главная", "Index", "Home")</li>
						<li>@Html.ActionLink("Админка", "Index", new {area = "Admin", controller = "Chemicals"})</li>
					</ul>
					@*@Html.Partial("_LoginPartial")*@
				</div>
			</div>
		</div>
		<div class="container body-content">
			@if (!IsSectionDefined("sidebar")) {
				@RenderBody()
			} else {
				<div class="row">
					<div class="col-xs-3">
						@RenderSection("sidebar")
					</div>
					<div class="col-xs-9">
						@RenderBody()
					</div>
				</div>
			}
			<hr />
			<footer>
				<p>&copy; @DateTime.Now.Year - Сочная корзина</p>
			</footer>
		</div>

		@Scripts.Render("~/bundles/jquery")
		@Scripts.Render("~/bundles/bootstrap")
		@Scripts.Render("~/bundles/jqueryExtensions")
		@Scripts.Render("~/bundles/knockout")
		@Scripts.Render("~/bundles/knockoutExtensions")
		@Scripts.Render("~/bundles/juicyScripts")
		@RenderSection("scripts", required: false)
	</body>
</html>
